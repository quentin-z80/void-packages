post_install() {
	vmkdir usr/lib/udev/rules.d
	vinstall udev/60-minipro.rules 644 usr/lib/udev/rules.d/
	vinstall udev/61-minipro-uaccess.rules 644 usr/lib/udev/rules.d/
}
